
#include <iostream>
#include "Lista.h"
#include "windows.h";
#include "conio.h";

using namespace itla;

char Menu()
{
	char Opcion;
	do{
		cout <<"\t Menu" << endl;
		cout <<"1. Agregar" << endl;
		cout <<"2. Mostrar" << endl;
		cout <<"3. Buscar" << endl;
		cout <<"4. Eliminar" << endl;
		cout <<"5. Salir" <<endl;
		cout << "Opcion: ";
		cin >> Opcion;
		if(Opcion < '1' || Opcion > '4'){
			system("cls");
			cout<<"Opcion Invalida";
			getch();
		}

	}while(Opcion < '1' || Opcion > '5');
	return Opcion;
}

int main() {

	char Opcion;
	Nodo* Aux = NULL;
	Nodo* Temp = NULL;
	Lista *Cadena = new Lista();
	int Numero=0;
	do{
		Opcion = Menu();
		//system("cls");
		switch(Opcion)
		{
			case 1:
				cout <<"Agregar";
				Aux = new Nodo();
				cout << "Ingrese el nuevo numero:";
				cin>>Numero;
				Aux->Set_numero(Numero);
				Cadena->Agregar(Aux);

				cout<< "Numero almacenado exitosamente" <<endl;
			break;

			case 2:
				Temp = Cadena->Get_cabeza();
				while(Temp != NULL)
				{
					cout << Temp->Get_numero() << endl;
					Temp = Temp->Get_enlace();
				}
			break;

			case 3:
			break;

			case 4:
			break;

		}

	getch();
	system("cls");

	}while(Opcion!='5');

	return 0;
}
