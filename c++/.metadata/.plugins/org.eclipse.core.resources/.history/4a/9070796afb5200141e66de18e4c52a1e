#ifndef NODO_H_
#define NODO_H_
#include <iostream>
#include <string>
#include <cstdlib>
using namespace std;


namespace itla {

class Nodo {

private:
	string nombre;
	int hijos;
	Nodo* siguiente;


public:
	Nodo();

	//Nodo* getHijos();
	virtual ~Nodo();

	int getHijos(){
		return hijos;
	}

	void setHijos(int hijos) {
		this->hijos = hijos;
	}

	const string getNombre(){
		return nombre;
	}

	void setNombre(const string nombre) {
		this->nombre = nombre;
	}

	const Nodo* getPrimerHijo(){
		return primerHijo;
	}

	void setPrimerHijo(const Nodo* primerHijo) {
		this->primerHijo = primerHijo;
	}

	const Nodo* getSiguiente(){
		return siguiente;
	}

	void setSiguiente(const Nodo* siguiente) {
		this->siguiente = siguiente;
	}

	const Nodo* getUltimoHijo(){
		return ultimoHijo;
	}

	void setUltimoHijo(const Nodo* ultimoHijo) {
		this->ultimoHijo = ultimoHijo;
	}
};

} /* namespace itla */

#endif /* NODO_H_ */
