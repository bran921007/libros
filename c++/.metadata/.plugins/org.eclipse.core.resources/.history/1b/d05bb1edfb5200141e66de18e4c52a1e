#ifndef ARBOL_H_
#define ARBOL_H_
#include "Nodo.h"

namespace itla {

class Arbol {

private:
	Nodo* primerHijo;
	Nodo* ultimoHijo;
	Nodo* raiz;

public:
	void agregarHijo(Nodo* nodo);
	void recorrer(Nodo* nodo);
	Arbol();
	virtual ~Arbol();

	const Nodo* getPrimerHijo(){
		return primerHijo;
	}

	void setPrimerHijo(Nodo* primerHijo) {
		this->primerHijo = primerHijo;
	}

	Nodo* getUltimoHijo(){
		return ultimoHijo;
	}

	void setUltimoHijo(Nodo* ultimoHijo) {
		this->ultimoHijo = ultimoHijo;
	}

	const Nodo*& getRaiz() const {
		return raiz;
	}

	void setRaiz(const Nodo*& raiz) {
		this->raiz = raiz;
	}
};

} /* namespace itla */

#endif /* ARBOL_H_ */
