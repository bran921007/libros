#ifndef NODO_H_
#define NODO_H_
using namespace std;
#include <iostream>
#include <string>;
#include <cstdlib>;

namespace itla {

class Nodo {

private:
	string articulo;
	int cantidad;
	Nodo* siguiente;
public:
	Nodo(string nombre, int cantidad);
	virtual ~Nodo();

	string getArticulo() {
		return articulo;
	}

	void setArticulo(string articulo) {
		this->articulo = articulo;
	}

	int getCantidad() {
		return cantidad;
	}

	void setCantidad(int cantidad) {
		this->cantidad = cantidad;
	}

	Nodo* getSiguiente(){
		return siguiente;
	}

	void setSiguiente(Nodo* siguiente) {
		this->siguiente = siguiente;
	}
};

} /* namespace std */

#endif /* NODO_H_ */
