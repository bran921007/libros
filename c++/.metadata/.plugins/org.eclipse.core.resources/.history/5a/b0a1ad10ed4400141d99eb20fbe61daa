#include "Articulo.h"

namespace itla {

Articulo::Articulo() {
	primerArticulo = NULL;
	ultimoArticulo = NULL;
	primerCantidad = NULL;
	ultimoCantidad = NULL;

}

void itla::Articulo::introducirArticulo(Nodo* nodo) {

		if(primerArticulo == NULL)
		{
			primerArticulo = nodo;
			ultimoArticulo = nodo;
		}else{
			ultimoArticulo->setSiguiente(nodo);
			ultimoArticulo = nodo;
		}
}

void Articulo::eliminarArticulo() {
}

void Articulo::listarArticulo() {
}

int Articulo::menu(int opcion) {

			cout << "1- Listar articulos" << endl;
			cout << "2- Introducir articulo" << endl;
			cout << "3- Eliminar articulo" << endl;
			cout << "4- salir" << endl;
			cin >> opcion;
			return opcion;
}

Articulo::~Articulo() {
	// TODO Auto-generated destructor stub
}

} /* namespace std */
